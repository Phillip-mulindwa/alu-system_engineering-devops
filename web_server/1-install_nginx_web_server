#!/usr/bin/env bash
# Script to install and configure Nginx web server

# Update package lists
sudo apt-get update -y

# Install Nginx
sudo apt-get install nginx -y

# Start Nginx service (without systemctl)
sudo service nginx start

# Ensure the /var/www/html directory exists
sudo mkdir -p /var/www/html

# Write "Holberton School" to index.html
echo -e "Holberton School\n" | sudo tee /var/www/html/index.html

# Restart Nginx (without systemctl)
sudo service nginx restart
